@model FerramentaViewModel

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Jogo</h2>

<form action="Salvar" method="post" class="container">
	<input type="hidden" name="operacao" value="@ViewBag.operacao" />


	@if (ViewBag.operacao == "A")
	{
		<label for="id" class="control-label">ID</label>

		<input type="number" name="Id" value="@Model.id" readonly />

		<span asp-validation-for="id" class="text-danger"></span>
		<br />

	}


	<label for="descricao" class="control-label">Descrição</label>
	<input type="text" name="descricao" value="@Model.descricao" />
	<span asp-validation-for="descricao" class="text-danger"></span>

	<br />



	<label for="fabricanteId" class="control-label">ID de categoria</label>
	<select asp-for="fabricanteId">
		@{
			foreach (FabricanteViewModel fabricante in ViewBag.fabricante)
			{
				<option value="@fabricante.id">@fabricante.nome</option>
			}
		}
	</select>
	<span asp-validation-for="fabricanteId" class="text-danger"></span>

	<br />

	<input type="submit" value="Salvar dados">

	<br />
</form>
